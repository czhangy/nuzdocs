// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

enum Category {
    physical
    special
    status
}

type Description {
    desc  String
    group Int
}

type MoveType {
    type  String
    group Int
}

type MoveClass {
    class Category
    group Int
}

type MoveNum {
    num   Int
    group Int
}

type PokemonType {
    types String[]
    group Int
}

type Stats {
    stats Int[]
    group Int
}

type PokemonAbilities {
    abilities String[]
    group     Int
}

model Abilities {
    id    String        @id @default(auto()) @map("_id") @db.ObjectId
    slug  String        @unique
    name  String
    desc  Description[]
    group Int
}

model Items {
    id     String        @id @default(auto()) @map("_id") @db.ObjectId
    slug   String        @unique
    name   String
    sprite String
    desc   Description[]
}

model Moves {
    id    String        @id @default(auto()) @map("_id") @db.ObjectId
    slug  String        @unique
    name  String
    type  MoveType[]
    class MoveClass[]
    bp    MoveNum[]
    pp    MoveNum[]
    desc  Description[]
}

model Pokemon {
    id             String             @id @default(auto()) @map("_id") @db.ObjectId
    slug           String             @unique
    name           String
    types          PokemonType[]
    sprite         String
    prevEvolutions String[]
    nextEvolutions String[]
    stats          Stats[]
    abilities      PokemonAbilities[]
    formChangeable Boolean
}

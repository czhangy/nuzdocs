// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "mongodb"
    url      = env("DATABASE_URL")
}

type Descriptions {
    desc  String
    group Int
}

type Types {
    types String[]
    group Int
}

type Stats {
    stats Int[]
    group Int
}

type PokemonAbilities {
    abilities String[]
    group     Int
}

model Abilities {
    id    String         @id @default(auto()) @map("_id") @db.ObjectId
    slug  String         @unique
    name  String
    desc  Descriptions[]
    group Int
}

model Pokemon {
    id             String             @id @default(auto()) @map("_id") @db.ObjectId
    slug           String             @unique
    name           String
    types          Types[]
    sprite         String
    prevEvolutions String[]
    nextEvolutions String[]
    stats          Stats[]
    abilities      PokemonAbilities[]
    formChangeable Boolean
}
